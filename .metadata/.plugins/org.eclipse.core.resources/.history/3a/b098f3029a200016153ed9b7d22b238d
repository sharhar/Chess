package game;

public class Board {
	enum Piece {
		PAWN, W_ROOK, KNIGHT, BISHOP, QUEEN, KING, NOTHING
	}
	
	public volatile Piece[][] pieces = new Piece[8][8];
	public int num;
	
	public Board(int num) {
		this.num = num;
		
		for(int i = 0; i < 8;i++) {
			for(int j = 0; j < 8;j++) {
				pieces[i][j] = Piece.NOTHING;
			}
		}
		
		pieces[0][0] = Piece.W_ROOK;
	}
	
}
