package main;

import java.awt.Color;
import java.awt.Dimension;
import java.awt.Graphics;
import java.awt.image.BufferedImage;

import javax.swing.JFrame;
import javax.swing.JPanel;

import game.Player;

public class GameWindow extends JPanel{
	private static final long serialVersionUID = -3890124326645924014L;
	
	public JFrame frame;
	public Player player;
	public BufferedImage bg;
	
	public GameWindow() {
		frame = new JFrame("Chess");
		Dimension dim = new Dimension(800, 600);
		frame.setPreferredSize(dim);
		frame.setMinimumSize(dim);
		frame.setMaximumSize(dim);
		frame.pack();
		frame.setLocationRelativeTo(null);
		frame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		frame.add(this);
		frame.setVisible(true);
		
		player = Main.players.get(0);
		
		bg = new BufferedImage(8, 8, BufferedImage.TYPE_INT_RGB);
		bg.setRGB(0, 1, 0xffffff);
		bg.setRGB(0, 3, 0xffffff);
		bg.setRGB(0, 5, 0xffffff);
		bg.setRGB(0, 7, 0xffffff);
		
		bg.setRGB(2, 1, 0xffffff);
		bg.setRGB(2, 3, 0xffffff);
		bg.setRGB(2, 5, 0xffffff);
		bg.setRGB(2, 7, 0xffffff);
		
		bg.setRGB(4, 1, 0xffffff);
		bg.setRGB(4, 3, 0xffffff);
		bg.setRGB(4, 5, 0xffffff);
		bg.setRGB(4, 7, 0xffffff);
		
		bg.setRGB(6, 1, 0xffffff);
		bg.setRGB(6, 3, 0xffffff);
		bg.setRGB(6, 5, 0xffffff);
		bg.setRGB(6, 7, 0xffffff);
	}
	
	public void paintComponent(Graphics g) {
		g.setColor(Color.CYAN);
		g.drawImage(bg, 0, 0, 800, 600, null);
		repaint();
	}
}
